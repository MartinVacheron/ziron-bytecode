{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "zig build",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "build stress gc",
            "type": "shell",
            "command": "zig",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "args": [
                "build",
                "-Dlog_gc=true",
                "-Dstress_gc=true",
            ]
        },
        {
            "label": "build stress gc full log",
            "type": "shell",
            "command": "zig",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "args": [
                "build",
                "-Dlog_gc=true",
                "-Dstress_gc=true",
                "-Dprint_stack=true",
                "-Dprint_code=true",
                "-Dtracing=true",
            ]
        },
        {
            "label": "test",
            "type": "shell",
            "command": "zig",
            "args": [
                "test",
                "-femit-bin=zig-out/bin/${fileBasenameNoExtension}-test",
                "--test-no-exec",
                "${relativeFile}",
            ]
        }
    ]
}